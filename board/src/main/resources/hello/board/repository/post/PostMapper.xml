    <update id="update">
        update post_table
        set title=#{updateParam.title},
            content=#{updateParam.content},
            post_date = current_timestamp()
        where post_id=#{postId}
    </update>

    <select id="findById" resultType="Post">
        select post_id, title, writer_id, content, post_date
        from post_table
        where post_id=#{postId}
    </select>

