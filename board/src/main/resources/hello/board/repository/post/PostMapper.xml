    <select id="findAll" resultType="Post">
        select post_id, title, writer_id, content, post_date, login_id
        from user_table
        left outer join post_table
        on user_table.id = post_table.writer_id
        where writer_id is not null
    </select>

    <select id="delete">
        delete
